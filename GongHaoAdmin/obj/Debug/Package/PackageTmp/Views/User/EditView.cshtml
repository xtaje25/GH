@using GongHaoAdmin.Models;
@{ 
   Tab_User user = ViewBag.user;
}
<div class="pageContent">
    <form method="post" action="@Url.Content("~/User/Edit")" class="pageForm required-validate" onsubmit="return validateCallback(this, dialogAjaxDone);">
        <div class="pageFormContent" layoutH="56">
            <p>
                <label>账号名称：</label>
                <input name="name" class="required" type="text" size="30" minlength="1" maxlength="50" value="@(user!=null?user.F_Name:"")" />
                <input name="id" class="required" type="hidden" value="@(user!=null?user.F_Id:0)" />
            </p>
            <p>
                <label>账号密码：</label>
                <input name="pwd" type="checkbox" value="1" /> 重置密码
            </p>
        </div>
        <div class="formBar">
            <ul>
                <li>
                    <div class="buttonActive"><div class="buttonContent"><button type="submit">保存</button></div></div>
                </li>
                <li>
                    <div class="button"><div class="buttonContent"><button type="button" class="close">取消</button></div></div>
                </li>
            </ul>
        </div>
    </form>
</div>

